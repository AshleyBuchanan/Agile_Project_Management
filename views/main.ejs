<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agile Project Manager</title>
    <link rel="icon" href="/agileImage.png" type="image/x-icon">
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/nav.css">
    <link rel="stylesheet" href="/dashboards.css">
    <link rel="stylesheet" href="/panels.css">
    <link rel="stylesheet" href="/cards.css">
</head>

<body>
    <nav>
        <img width="35px" src="/agileImage.png" alt="">
        <div class="spacer"></div>
        <div class="drop-down active">Dashboards</div>
        <div class="drop-down">Projects</div>
        <div class="drop-down">Issues</div>
        <div class="drop-down">Boards</div>
        <div class="drop-down">Plans</div>
        <div class="drop-down">Links</div>
        <div class="drop-down bubble">Create</div>
        <div class="big-spacer"></div>
        <input type="search" placeholder="&#x1F50D; Search">
        <img width="35px" src="/bullhorn.png" alt="">
        <img width="35px" src="/help.png" alt="">
        <img width="35px" src="/settings.png" alt="">
        <div class="drop-down bubble"><%- users[0].name %></div>
    </nav>

    <div class="main-flex">
        <section class="dashboard">
            <header>
                <img width="55px" src="/fm_be_web.png" alt="">
                <%- users[0].team %>
            </header>
            <div class="selector-block">
                <div class="selector">
                    <img class="icon" src="/files_icon.png" alt=""> Backlog
                </div>
                <div class="selector active">
                    <img class="icon" src="/forward_icon.png" alt=""> Active sprints
                </div> 
                <div class="selector">
                    <img class="icon" src="/report_icon.png" alt=""> Reports
                </div>
            </div>
            <div class="collapse"><span class="icon">&laquo;</span></div>
        </section>
        <div class="main-container">
            <div class="top-level-1">
                <div class="left">FM FY25 Q3</div>
                <span class="right"></span>

                <div>
                    <div class="middle">&#128337; 10 days remaining <span class="bubble-long inactive">Complete sprint</span></div>
                   
                </div>
                <div class="right-margin">
                    <span class="bubble-long">Links Hierarchy</span>
                    <span class="bubble-long">Board</span> 
                    <span class="bubble-long">&circlearrowleft;</span> 
                </div>
 
            </div>
            <div class="top-level-2">
                <span class="quick-filter">QUICK FILTERS:</span>
                <% for (let i=0; i<shortcuts.length; i++){ %>
                    <div class="bubble-long"><%- shortcuts[i] %></div>
                <% } %>
            </div>
            <div class="top-level-3">
                <!-- Header row with panel titles -->
                <div class="panel-row">
                    <div class="panel-header">
                        <% for(let i=0; i<7; i++){ %>
                            <div class="panel-column">
                                <div class="panel-title"><%- panelNames[i] %></div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="panel-block">      
                <!-- Each project gets its own row of 7 panels -->
                <% for (let j=0; j<users[0].projects.length; j++){ %>
                    <div class="panel-row">
                        <div class="project-title-row"><%- users[0].projects[j] %></div>
                    </div>
                    <div class="panel-row">
                        <% for (let i=0; i<7; i++){ %>
                            <div class="panel-column">
                                <div class="panel" data-project="<%- users[0].projects[j] %>" data-step="<%- panelNames[i] %>"></div>
                            </div>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
 
    <script src="/app.js"></script>
</body>

</html>